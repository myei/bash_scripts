folders=$(ls /home)
echo $folders

branches=$(git branch -a | grep remotes/aws | grep -v HEAD | grep -v master)

cont=0
for remote in ${branches[*]}
do
	IFS='/' read -r -a branch <<< "$remote"
	printf "\n${CYAN}${BOLD} Creando y actualizando rama remota: ${YELLOW}${branch[2]} ${NC}\n\n"

	let cont+=1
done