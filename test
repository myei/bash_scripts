#!/bin/bash
# C O L O R S
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
CYAN='\033[0;36m'
PURPLE='\e[95m'
WHITE='\e[97m'
YELLOW='\e[93m'
NC='\033[0m'

# F O N T S
BOLD='\e[1m'
NF='\e[0m'
BLINK='\e[5m'
I='\e[3m'
S='\e[4m'

# S Í M B O L O S
GOOD='\u2714'
BAD='\u2718'
ARROW='\u27a1'
HAND="\u261b"

(
		echo "10" ; sleep 1
		echo "# Actualizando los registros de los correos" ; sleep 1
		echo "20" ; sleep 1
		echo "# Reiniciando las tareas de cron" ; sleep 1
		echo "50" ; sleep 1
		echo "Esta linea se ignorará" ; sleep 1
		echo "75" ; sleep 1
		echo "# Reiniciando el sistema" ; sleep 1
		echo "100" ; sleep 1
	) |
	zenity --progress title="Actualizando los registros del sistema" text="Rastreando los registros de los correos..." percentage=0

	zenity --list --title="Seleccione repositorio" --column="Nombre" --width="600" --height="600" $text